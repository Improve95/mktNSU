import lingo/pegcode/driver;
import ds/dlist;

export {
  Expr ::= Sum, Mul, Int;
  Int(i : int);
  Sum(e1 : Expr, e2 : Expr);
  Mul(e1 : Expr, e2 : Expr);

  ex2s(e : Expr, isMul : int);
  ex2i(e : Expr);
}

ex2s(e : Expr, isMul : int) -> string {
  switch (e : Expr) {
    Int(i) : i2s(i);
    Sum(e1, e2) : {
      recExpr = ex2s(e1, 0)  + "+" + ex2s(e2, 0); 
      if (isMul == 1) {
        "(" + recExpr + ")";
      } else { 
        recExpr;
      }
    }
    Mul(e1, e2) :  ex2s(e1, 1)  + "*" +  ex2s(e2, 1);
  }
}

ex2i(e : Expr) -> int {
  switch (e) {
    Int(i): i;
    Sum(e1, e2): ex2i(e1) + ex2i(e2);
    Mul(e1, e2): ex2i(e1) * ex2i(e2);
  }
}