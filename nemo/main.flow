import validate;
import vm;

main() {
    programm = 
    "
        VAR n: INT; 
        VAR x: INT; 
        VAR y: INT; 
        {
            n := 12; x := 0; y := 0;
            {
                {
                    (y <= n)?;
                    y := (y + (x + (x + 1)));
                    x := (x + 1);
                }*;
                (NOT (y <= n))?;
            };
            x := (x - 1);
        }
    "

    prog = parse(programm);

    println(prog);
    println("");

    correct = checkProgram(prog);
    if (correct) {
        println("correct");
        code = translateToVMCode(prog);
        println(code);
        println("");

        final = executeProgram(code);
        println(final);
    }

    quit(0);
}